apiVersion: argoproj.io/v1alpha1
kind: Rollout
metadata:
  name: osssecure
  namespace: team-mvp
spec:
  replicas: 1
  revisionHistoryLimit: 1
  selector:
    matchLabels:
      app: osssecure
  template:
    metadata:
      labels:
        app: osssecure
    spec:
      containers:
      - name: webserver-simple
        image: docker.io/todaywasawesome/colors:v1.0.1-secure #Available releases are blue, purple, yellow, v0.0.1-test (signed), v1.0.1-secure (signed)
        # ports:
        # - containerPort: 8080
  strategy:
    blueGreen:
      autoPromotionEnabled: false
      activeService: bluegreen-demo
      previewService: bluegreen-demo-preview

---
apiVersion: v1
kind: Service
metadata:
  name: bluegreen-demo-preview
  namespace: team-mvp
  labels:
    app: osssecure
spec:
  ports:
    - port: 8080
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app: osssecure

---
apiVersion: v1
kind: Service
metadata:
  name: bluegreen-demo
  namespace: team-mvp
  labels:
    app: osssecure
spec:
  ports:
  - port: 8080
    targetPort: http
    protocol: TCP
    name: http
  selector:
    app: osssecure
